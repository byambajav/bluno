<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res/com.example.bluno"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
 android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".MainActivity" >
<!-- scanning -->
   <RelativeLayout
        android:id="@+id/TopLayout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="0dp">

       <ImageView
           android:id="@+id/title_image_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/title_scanning" />

   </RelativeLayout>
<!-- scanning -->
	
<!-- txt -->

	<RelativeLayout
	    android:id="@+id/BottomLayout"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/CenterLayout"
	    android:orientation="vertical" >


	    

	    
	    <ImageView
	        android:id="@+id/bottom"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/uploadbutton"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"
	        android:src="@drawable/backbutton" />

	    <EditText
	        android:id="@+id/editArea"
	        android:layout_width="310dp"
	        android:layout_height="40dp"
	        android:layout_above="@+id/uploadbutton"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="15dp"
	        android:background="@drawable/backedit"
	        android:bufferType="editable"
	        android:ems="10"
	        android:inputType="text"
	        android:text="testing"
	        android:textColor="#000000"
	        android:textSize="20dip" />

	    <ImageView
	        android:id="@+id/uploadbutton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="5dp"
	        android:background="@drawable/oleduploadbutton"
	        android:clickable="true"
	        android:focusable="true" />

	    <ImageView
	        android:id="@+id/backmes"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/bottom"
	        android:layout_alignParentLeft="true"
	        android:layout_marginBottom="16dp"
	        android:src="@drawable/backmessage" />

	</RelativeLayout>

</RelativeLayout>

